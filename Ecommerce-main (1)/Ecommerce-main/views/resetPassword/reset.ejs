<div class="row" style="margin-top: 80px;">
    <div class="col-6 mx-auto">
        <form action="/reset/<%= token %>" method="POST">
            <h1 class="display-6">Add new password</h1>
            
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input type="password" class="form-control" name="password" id="password" placeholder="password of the user" required>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Update password</button>
            <!-- <p class="mt-2">Dont have an account? <a href="/register">Signup now</a></p> -->
        </form>
    </div>
</div>


